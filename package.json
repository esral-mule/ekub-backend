{
  "name": "qna",
  "version": "1.0.0",
  "description": "Backend API for QnA using Express and MongoDB",
  "main": "server.js",
  "private": true,
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mooler-z/QnA.git"
  },
  "scripts": {
    "precommit": "npm run lint && npm run test",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "esbuild src/server.js --bundle --platform=node --target=node14 --minify --outfile=dist/backend.js",
    "lint": "eslint '**/*.js' --ignore-pattern internals/scripts --ignore-path .gitignore",
    "lint:fix": "npm run lint --fix",
    "lint:watch": "npm run lint --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --exit --recursive tests/",
    "test:unit": "cross-env NODE_ENV=test mocha tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --exit --timeout 20000 tests/integration",
    "test:watch": "cross-env NODE_ENV=test nodemon --exec mocha -R min tests/integration",
    "docs": "apidoc -i src -o docs",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "validate": "npm run lint && npm run test",
    "docker:prod": "docker-compose up --build",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --build --abort-on-container-exit",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up"
  },
  "author": "Neo Tech PLC",
  "license": "MIT",
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "passport"
  ],
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validation": "^4.1.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "moment": "^2.29.4",
    "mongoose": "^7.3.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "apidoc": "^1.0.3",
    "chai": "^4.3.7",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "sinon": "^15.1.2",
    "supertest": "^6.3.3"
  }
}
